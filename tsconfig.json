{
  "include": ["types", "packages"],
  "compilerOptions": {
    "incremental": false,
    "target": "es2020",
    "baseUrl": ".",
    "rootDir": ".",
    "importHelpers": true,
    "composite": false,
    "declarationMap": true,
    "declaration": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "preserveSymlinks": true,
    "jsx": "react-jsx",
    "module": "Preserve",
    "moduleResolution": "Bundler",
    "noEmitOnError": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "useUnknownInCatchVariables": false,
    "preserveConstEnums": true,
    // DONT DO THIS so jsdoc will remain
    "removeComments": false,
    "skipLibCheck": true,
    "sourceMap": false,
    "types": ["node", "jest"],
    "lib": ["dom", "esnext"],
    "strictNullChecks": true,
    "isolatedModules": true,
    "noUncheckedIndexedAccess": true,
    "paths": {
      "app/*": ["./packages/app/*"]
      // "@uidu/native/*": ["./packages/ui/*"]
    }
  },
  "exclude": [
    "_",
    "**/node_modules",
    "**/dist",
    "**/types",
    "expect-matchers.d.ts",
    "docs/next/out",
    "docs/next/.next",
    "docs/next/.tamagui"
  ],
  "typeAcquisition": {
    "enable": true
  }
}
