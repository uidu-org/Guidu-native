{
  "name": "uidu-ui-monorepo",
  "private": true,
  "workspaces": [
    "./apps/*",
    "./packages/config",
    "./packages/ui",
    "./packages/gui-chat",
    "./packages/web/components/core/*",
    "./packages/web/components/forms/*",
    "./packages/web/components/media/*",
    "./packages/web/src/**/*",
    "./packages/web/lib"
  ],
  "scripts": {
    "storybook": "cd packages/web/storybook && npx storybook dev -p 6006",
    "native": "cd apps/expo && npx expo prebuild && yarn start",
    "native:ios": "cd apps/expo && yarn ios",
    "native:android": "cd apps/expo && yarn android",
    "postinstall": "preconstruct dev",
    "watch": "yarn workspaces foreach -pi run watch",
    "vercel:install": "yarn set version 3.5 && yarn install",
    "web": "cd apps/next && yarn next",
    "web:extract": "DISABLE_EXTRACTION=false yarn workspace next-app dev",
    "web:prod": "yarn workspace next-app build",
    "web:prod:serve": "yarn workspace next-app serve",
    "fix": "manypkg fix",
    "build": "yarn workspaces foreach --all --exclude next-app run build",
    "upgrade:tamagui": "yarn up '*tamagui*'@latest '@tamagui/*'@latest react-native-web-lite@latest",
    "upgrade:tamagui:canary": "yarn up '*tamagui*'@canary '@tamagui/*'@canary react-native-web-lite@canary",
    "check-deps": "check-dependency-version-consistency .",
    "android": "cd apps/expo && expo run:android",
    "ios": "cd apps/expo && expo run:ios"
  },
  "resolutions": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-refresh": "^0.14.0",
    "react-native-svg": "13.9.0",
    "react-native-web": "~0.19.6",
    "eslint-plugin-react-hooks": "<5"
  },
  "dependencies": {
    "@babel/core": "^7.23.9",
    "@babel/preset-env": "^7.23.9",
    "@babel/preset-react": "^7.23.3",
    "@babel/preset-typescript": "^7.23.3",
    "@babel/runtime": "^7.23.9",
    "@manypkg/cli": "^0.21.2",
    "@preconstruct/cli": "^2.8.3",
    "@storybook/addon-a11y": "^7.6.13",
    "@storybook/react": "^7.6.13",
    "@types/babel__core": "^7.20.5",
    "@types/babel__preset-env": "^7.9.6",
    "check-dependency-version-consistency": "^4.1.0",
    "downshift": "^8.3.1",
    "eslint": "^8.56.0",
    "eslint-config-uidu": "^0.9.2",
    "expo": "~49.0.18",
    "expo-splash-screen": "~0.20.5",
    "expo-status-bar": "~1.6.0",
    "framer-motion": "^11.0.3",
    "node-gyp": "^9.4.1",
    "prettier": "^2.8.8",
    "react": "^18.2.0",
    "react-hook-form": "^7.49.3",
    "react-native": "0.72.10",
    "tamagui": "^1.89.8",
    "tsup": "^8.0.1",
    "turbo": "^1.12.2",
    "typescript": "^5.3.3"
  },
  "packageManager": "yarn@4.0.2",
  "preconstruct": {
    "packages": [
      "./packages/ui",
      "./packages/config",
      "!./packages/web/storybook",
      "./packages/web",
      "./packages/web/lib",
      "./packages/web/components/*/*",
      "./packages/web/src/**/*"
    ]
  },
  "peerDependencies": {
    "react": "*"
  },
  "version": "1.0.0"
}
