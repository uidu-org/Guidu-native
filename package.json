{
  "name": "uidu-ui-monorepo",
  "version": "1.1.0",
  "private": true,
  "workspaces": [
    "./docs",
    "./packages/components/core/*",
    "./packages/components/forms/*",
    "./packages/components/media/*",
    "./packages/src/**/*",
    "./packages/lib",
    "./packages/",
    "./packages/storybook"
  ],
  "scripts": {
    "storybook": "cd packages/storybook && npx storybook dev -p 6006",
    "build-storybook": "cd packages/storybook && yarn build-storybook",
    "watch": "yarn workspaces foreach -pi run watch",
    "vercel:install": "yarn set version 3.5 && yarn install",
    "docs": "cd docs && yarn next",
    "docs:extract": "DISABLE_EXTRACTION=false yarn workspace next-app dev",
    "docs:prod": "yarn workspace next-app build",
    "docs:prod:serve": "yarn workspace next-app serve",
    "fix": "manypkg fix && cd apps/expo && npx expo install --fix",
    "dev": "yarn turbo dev --concurrency=100 --continue",
    "build": "yarn workspaces foreach --all --exclude next-app run build",
    "turbo:dev:web-core": "turbo dev --output-logs=errors-only --concurrency=31 --filter='./packages/components/core/*'",
    "turbo:dev:web-forms": "turbo dev --output-logs=errors-only --concurrency=31 --filter='./packages/components/forms/*'",
    "turbo:build:web-core": "turbo build --filter='./packages/src/core' ",
    "turbo:build:web-forms": "turbo build --filter='./packages/src/forms' ",
    "yarn:versionPatch:web-core": "cd packages/components/core && yarn workspaces foreach -A run versionPatch",
    "yarn:versionMinor:web-core": "cd packages/components/core && yarn workspaces foreach -A run versionMinor",
    "yarn:versionMajor:web-core": "cd packages/components/core && yarn workspaces foreach -A run versionMajor",
    "yarn:versionPatch:web-forms": "cd packages/components/forms && yarn workspaces foreach -A run versionPatchFormsWeb",
    "yarn:versionMinor:web-forms": "cd packages/components/forms && yarn workspaces foreach -A run versionMinorFormsWeb",
    "yarn:versionMajor:web-forms": "cd packages/components/forms && yarn workspaces foreach -A run versionMajorFormsWeb",
    "yarn:npmPublish:web-core": "cd packages/components/core && yarn workspaces foreach -A run npmPublish",
    "yarn:npmPublish:web-forms": "cd packages/components/core && yarn workspaces foreach -A run npmPublishFormsWeb",
    "test:jest": "jest --no-cache",
    "test:pw": "playwright test",
    "test": "run test:jest && echo \"[ finish JEST ==> start PLAYWRIGHT ]\" && run test:pw",
    "chromatic": "npx chromatic"
  },
  "resolutions": {
    "cmdk": "0.2.1",
    "@radix-ui/react-dismissable-layer": "1.0.5",
    "@radix-ui/react-dialog": "1.0.5",
    "react-refresh": "^0.14.0",
    "eslint-plugin-react-hooks": "<5"
  },
  "dependencies": {
    "@babel/core": "^7.24.5",
    "@babel/preset-env": "^7.24.5",
    "@babel/preset-react": "^7.24.1",
    "@babel/preset-typescript": "^7.24.1",
    "@changesets/cli": "^2.27.1",
    "@manypkg/cli": "^0.21.4",
    "@preconstruct/cli": "^2.8.4",
    "@testing-library/react": "^15.0.7",
    "@types/babel__core": "^7.20.5",
    "@types/babel__preset-env": "^7.9.6",
    "@types/jest": "^29.5.12",
    "@types/react": "^18.3.2",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.9.0",
    "@typescript-eslint/parser": "^7.9.0",
    "check-dependency-version-consistency": "^4.1.0",
    "chromatic": "^11.4.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.0",
    "eslint-config-uidu": "^0.9.6",
    "eslint-plugin-mdx": "^3.1.5",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "playwright": "^1.44.1",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "react": "^18.3.1",
    "ts-node": "^10.9.2",
    "tsup": "^8.0.2",
    "turbo": "^1.13.3",
    "typescript": "^5.4.5"
  },
  "packageManager": "yarn@4.1.1",
  "preconstruct": {
    "packages": []
  },
  "devDependencies": {
    "@playwright/test": "^1.44.1",
    "@types/node": "^20.12.12"
  }
}
